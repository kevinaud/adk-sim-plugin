{
  "name": "ADK Agent Sim",
  "build": {
    "dockerfile": "Dockerfile",
    "context": ".."
  },

  // ============================================================
  // Container Runtime Configuration
  // ============================================================
  // --shm-size: Increases shared memory from default 64MB to 2GB.
  //   Modern browsers (Chromium) require significant shared memory
  //   for rendering operations. Insufficient shm causes SIGKILL
  //   crashes during complex rendering in Playwright tests.
  //
  // See: https://playwright.dev/docs/docker
  // ============================================================
  "runArgs": ["--shm-size=2g"],

  "features": {
    "ghcr.io/devcontainers/features/docker-in-docker:2": {
      "enableNonRootDocker": "true",
      "moby": false
    },
    "ghcr.io/dhoeric/features/act:1": {},
    "ghcr.io/devcontainers-extra/features/uv:1": {},
    "ghcr.io/devcontainers-extra/features/prettier:1": {},
    "ghcr.io/devcontainers-extra/features/apt-get-packages:1": {
      "packages": "jq,procps,snapd,vim,cloc"
    },
    "ghcr.io/devcontainers/features/github-cli:1": {},
    "ghcr.io/bartventer/arch-devcontainer-features/gcloud-cli:1": {},
    "ghcr.io/joshuanianji/devcontainer-features/gcloud-cli-persistence:1": {}
  },

  "customizations": {
    "vscode": {
      "settings": {
        "python.defaultInterpreterPath": "${containerWorkspaceFolder}/.venv/bin/python",
        "python.testing.pytestEnabled": true,
        "editor.insertSpaces": true,
        "editor.tabSize": 2
      },
      "extensions": [
        "ms-python.python",
        "ms-python.vscode-pylance",
        "charliermarsh.ruff",
        "ms-toolsai.jupyter",
        "tamasfe.even-better-toml",
        "angular.ng-template",
        "DrBlury.protobuf-vsc",
        "GitHub.copilot-chat@0.35.0",
        "GitHub.vscode-pull-request-github",
        "anthropic.claude-code"
      ]
    }
  },

  // Initialize command runs on host before container starts.
  // Creates directories that will be bind-mounted to prevent mount failures.
  "initializeCommand": "touch ${localEnv:HOME}/.gh_token_file && mkdir -p ${localEnv:HOME}/.cache/ms-playwright",

  "mounts": [
    "source=${localEnv:HOME}/.gh_token_file,target=/home/vscode/.gh_token_file,type=bind,readonly",
    "source=uv-cache,target=/opt/uv-cache,type=volume",

    // 1. SHARED AUTH VOLUME (The most important part)
    // Static name "claude-data" = Single Sign-On across all your containers
    "source=claude-data,target=/home/vscode/.claude,type=volume",

    // 2. SHARED BASH HISTORY (Optional quality of life)
    // Static name "adk-bash-history" = You keep your command history
    "source=adk-bash-history,target=/commandhistory,type=volume",

    // 3. PLAYWRIGHT BROWSER CACHE (Performance optimization)
    // Prevents re-downloading ~500MB of browser binaries on container rebuild.
    // Uses bind mount from host so browsers downloaded once are reused.
    // Note: Requires browsers to be installed on host first (npx playwright install)
    "source=${localEnv:HOME}/.cache/ms-playwright,target=/home/vscode/.cache/ms-playwright,type=bind"
  ],

  "forwardPorts": [4200, 8080, 50051],

  "postCreateCommand": "bash .devcontainer/init.sh",
  "postStartCommand": "bash .devcontainer/post-start.sh",
  "remoteEnv": {
    // 2. Force Claude to look in our mounted volume
    "CLAUDE_CONFIG_DIR": "/home/vscode/.claude",

    // 3. Config for the bash history mount above
    "HISTFILE": "/commandhistory/.bash_history",

    // 4. Disable Angular CLI analytics prompt (blocks stdin in containerized environments)
    "NG_CLI_ANALYTICS": "false"
  }
}
