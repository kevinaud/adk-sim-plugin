{
    "[markdown]": {
        "editor.wordWrap": "wordWrapColumn",
        "editor.wordWrapColumn": 100,
        "editor.rulers": [
            100
        ]
    },
    "markdown.extension.preview.autoShowPreviewToSide": true,
    "files.exclude": {
        "**/__pycache__": true,
        "**/.pytest_cache": true,
        "**/.mypy_cache": true,
        "**/.ruff_cache": true,
        "**/*.egg-info": true,
        "**/.venv": true,
        "**/*.pyc": true
    },
    "chat.promptFilesRecommendations": {
        "speckit.constitution": true,
        "speckit.specify": true,
        "speckit.plan": true,
        "speckit.tasks": true,
        "speckit.implement": true
    },
    "chat.tools.terminal.autoApprove": {
        ".specify/scripts/bash/": true,
        ".specify/scripts/powershell/": true
    },
    "[python]": {
        "editor.defaultFormatter": "charliermarsh.ruff",
        "editor.formatOnSave": true,
        "editor.codeActionsOnSave": {
            "source.fixAll": "explicit",
            "source.organizeImports": "explicit"
        }
    },
    "ruff.configurationPreference": "filesystemFirst",
    "protobuf.externalLinter.enabled": true,
    "protobuf.externalLinter.linter": "buf",
    "protobuf.externalLinter.bufPath": "/usr/local/bin/buf",
    "protobuf.buf.path": "/usr/local/bin/buf",
    // 1. Tell the Python extension to stop using Pylance
    // "python.languageServer": "None",
    
    // 2. Optional: Ensure Pyright is the one providing analysis
    // "python.analysis.typeCheckingMode": "off"
}
